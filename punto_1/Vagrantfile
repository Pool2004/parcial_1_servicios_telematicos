Vagrant.configure("2") do |config|
  # Box base para ambas VMs
  config.vm.box = "ubuntu/focal64"

  # Tiempo de espera ampliado para que no falle la conexi√≥n SSH
  config.vm.boot_timeout = 600

  # -------------------------------
  # Maestro (Servidor Apache)
  # -------------------------------
  config.vm.define "maestro" do |maestro|
    maestro.vm.hostname = "maestro"
    maestro.vm.network "private_network", ip: "192.168.56.10"

    maestro.vm.provider "virtualbox" do |vb|
      vb.name = "maestro"
      vb.memory = 2048
      vb.cpus = 2
    end
  end

  # -------------------------------
  # Esclavo (Cliente de pruebas)
  # -------------------------------
  config.vm.define "esclavo" do |esclavo|
    esclavo.vm.hostname = "esclavo"
    esclavo.vm.network "private_network", ip: "192.168.56.11"

    esclavo.vm.provider "virtualbox" do |vb|
      vb.name = "esclavo"
      vb.memory = 2048
      vb.cpus = 2
    end
  end
end

